<!-- recent posts -->
{%- if theme.recent_posts %}
    <div class="links-of-blogroll motion-element {{ "links-of-blogroll-" + theme.recent_posts_layout }}">
        <div class="links-of-blogroll-title recent-posts-title">
	    <i class="fa fa-history {{ theme.recent_posts_icon | lower }}" aria-hidden="true"></i>
            {{ theme.recent_posts_title }}
	</div>
	<ul class="links-of-blogroll-list recent-posts-list">
	    {%- set posts = site.posts.sort('-date').toArray() %}
	    {%- for post in posts.slice('0', '5') %}
	        <li class="my-links-of-blogroll-item">
		    <a href="{{ url_for(post.path) }}" title="{{ post.title }}" target="">
		    {{ post.title }}
		    </a>
		</li>
	    {%- endfor %}
	</ul>
    </div>
{%- endif %}

{% if site.tags.length > 1 %}
  <div class="links-of-blogroll motion-element">
    <div class="links-of-blogroll-title">
      <i class="fa fa-tags"></i>
      标签云
    </div>
    <div id="myCanvasContainer" style="width: 100%; text-align: center;">
      <canvas width="250" height="250" id="resCanvas" style="width:100%">
        {# 这里的 id 必须和 js 里的 'resCanvasLinks' 对应 #}
        <ul id="resCanvasLinks">
          {% for tag in site.tags.toArray() %}
            <li><a href="{{ url_for(tag.path) }}">{{ tag.name }}</a></li>
          {% endfor %}
        </ul>
      </canvas>
    </div>
  </div>
  <script type="text/javascript" charset="utf-8" src="{{ url_for('/js/tagcanvas.js') }}"></script>
  <script type="text/javascript" charset="utf-8" src="{{ url_for('/js/tagcloud.js') }}"></script>
{% endif %}